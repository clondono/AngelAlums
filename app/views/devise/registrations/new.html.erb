<div class="form-signUp">

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form">
      <h2 class="form-title">Sign up</h2>

      <div><%= f.label :first_name %>
      <%= f.text_field :first_name, :autofocus => true %></div>

      <div><%= f.label :last_name %>
      <%= f.text_field :last_name, :autofocus => true %></div>
      
      <div><%= f.label :email %>
      <%= f.email_field :email, :autofocus => true %></div>

      <div><%= f.label :password %>
      <%= f.password_field :password %></div>

      <div><%= f.label "Confirm" %>
      <%= f.password_field :password_confirmation %></div>

      <div><%= f.label :type %>
      <%= f.select :type, options_for_select(%w[Student Alumni]) %></div>
      <div style="margin-top:20px;margin-bottom:10px">
        <div style="display:inline"><%= f.submit "Sign Up", class:"btn inlineb btn-primary" %></div>
        or
        <%= link_to "Sign In", root_path, class:"btn inlineb btn-info"%>
      </div>

      <%= link_to "Forgot your password?", new_password_path('user')%>

    </div>



  <% end %>
</div>