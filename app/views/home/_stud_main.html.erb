<div id="carousel-main" class="carousel carousel-main slide" data-ride="carousel">
  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% if @highlighted_projects.length == 0%>
    <div class="item active">
      <%= image_tag "nothing.jpg"%>
    </div>
    <%end%>
    <% @highlighted_projects.each_with_index do |proj, index|%>
    <div class="item <%= 'active' if index == 0%>">
    <%= image_tag proj.image.url%>
      <div class="carousel-caption inlineb blurb">
        <div class="proj-title inlineb">
          <h2 class= "Headings"><%= proj.title%></h2>
          By <%= proj.student.name%>
        </div>
        <div class = "funds">
          Funds Raised:
          <br />
          <div class="progress progress-striped">
            <div class="bar" style="width: <%= (proj.total_donation / proj.goal)*100%>%;">$<%= proj.total_donation %></div>
          </div>
        </div>
        <%= link_to 'View', proj , :class => 'btn btn-primary'%>
      </div>
    </div>
    <%end%>
  </div>

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @highlighted_projects.length.times do |i|%>
      <%if i == 0%>
        <li data-target="#carousel-main" data-slide-to="0" class="active"></li>
      <%else%>
        <li data-target="#carousel-main" data-slide-to="<%= i%>"></li>
      <%end%>
    <%end%>
  </ol>

  <!-- Controls -->
  <a class="left carousel-control carousel-btn" href="#carousel-main" data-slide="prev">
    <span class = "fa fa-angle-left carousel-btn-left"></span>
  </a>
  <a class="right carousel-control carousel-btn" href="#carousel-main" data-slide="next">
    <span class = "fa fa-angle-right carousel-btn-right"></span>
  </a>
</div>
