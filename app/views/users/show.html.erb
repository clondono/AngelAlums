  <div id="user-contain">
    <div id="user-sidebar">
      <table cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td>
            <img src="<%=@user.avatar.url%>" align="center" id = "user-avatar"><br>
          </td>
        </tr>
      </table>
      <div class="user-headings">      about
      </div>
      <div class="user-blurb">
        <b>Name:</b> <%=@user.first_name%> <%=@user.last_name%><br>
        <b>Major:</b> <%=@user.major%><br>
        <b>Graduation Year:</b> <%=@user.grad_year%><br>
        <b>Email:</b><%=@user.email%><br>
      </div>
    </div>
    <div id="user-main">
      <div id="user-header2" class ="Headings">
        <div id="user-name">
          <i style="color:#aaa">{</i>
          <%=@user.first_name%> <%=@user.last_name%>
        </div>
        <div class="user-blurb2">
          <!-- sub title -->
        </div>
      </div>
      <div class="user-headings2">
        <% if @user.type == "Student" %>   

          Projects
        <% else %>
                 Projects Donated to
        <% end %>
      </div>
      <div class="user-blurb3">
        <table class="table">
          <% @user.projects.uniq_by(&:id).each do |project| %>
              <tr>
                  <td>
                      <%= link_to ""+ project.title, project %>
                  </td>
                  <td>
                    <div class="progress progress-striped">
                      <div class="bar" style="width: <%= (project.total_donation / project.goal)*100%>%;">$<%= project.total_donation %>
                      </div>
                    </div>                
                  </td>
              </tr>
          <% end %>
        </table>
      </div>  

      <% if @user.type == "Student" %>   
        <div class="user-headings3">
          Collaborating Projects

        </div>
        <div class="user-blurb4">
          <table class="table">
            <% @user.shared_projects.each do |project| %>
                <tr>
                    <td>
                        <%= link_to ""+ project.title, project %>
                    </td>
                    <td>
                    <div class="progress progress-striped">
                      <div class="bar" style="width: <%= (project.total_donation / project.goal)*100%>%;">$<%= project.total_donation %>
                      </div>
                    </div>                 
                    </td>
                </tr>
            <% end %>
          </table>
        </div>
      <% end %>
    </div>
  </div>