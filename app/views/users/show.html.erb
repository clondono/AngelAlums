<lj-raw>
  <div id="contain" style="margin:0 auto;width:870px;font-family:helvetica,arial,sans-serif;font-size:11px;color:#222;line-height:185%;text-align:justify;background:#fff;padding:10px;">
    <div id="sidebar" style="width:300px;padding-right:10px;float:left;background:#fff;text-align:left;">
      <table cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td>
            <img src="URL1" align="center" style="width:250px;background:#f9f9f9;margin:3px;border-radius:175px;"><br>
          </td>
        </tr>
      </table>
      <div class="title" style="margin-top:10px;font-size:25px;font-family:georgia;border-bottom:3px solid #eee;letter-spacing:-1px;color:#006064;">      about
      </div>
      <div class="blurb" style="background:#eee;padding:10px;border-radius:10px;">
        <b>Name:</b> <%=@user.first_name%> <%=@user.last_name%><br>
        <b>Major:</b> <%=@user.major%><br>
        <b>Graduation Year:</b> <%=@user.grad_year%><br>
        <b>Email:</b><%=@user.email%><br>
      </div>
    </div>

    <div id="main" style="margin-left:330px;">
      <div id="header" style="padding-top:20px">
        <div id="name" style="font-size:59px;font-family:georgia;letter-spacing:-3px;color:#006064;">
          <i style="color:#aaa">{</i>
          <%=@user.first_name%> <%=@user.last_name%>
        </div>
        <div class="blurb1" style="width:80%;margin:0 auto 20px auto;background:#eee;padding:15px;border-radius:15px;">
          <!-- sub title -->
        </div>
      </div>
      <div class="title" style="font-size:25px;font-family:georgia;border-bottom:3px solid #eee;letter-spacing:-1px;color:#006064;">
        Projects

      </div>
      <div class="blurb" style="width:100%;float:left;background:#eee;padding:10px;border-radius:10px;margin:5px;">
        <table class="table">
          <% @user.projects.each do |project| %>
              <tr>
                  <td>
                      <%= link_to ""+ project.title, project %>
                  </td>
                  <td>
                    <div class="progress progress-striped">
                      <div class="bar" style="width: <%= (project.total_donation / project.goal)*100%>%;">$<%= project.total_donation %>
                      </div>
                    </div>                
                  </td>
              </tr>
          <% end %>
        </table>
      </div>      
      <div class="title" style="font-size:25px;font-family:georgia;border-bottom:3px solid #eee;letter-spacing:-1px;color:#006064;">
        Collaborating Projects

      </div>
      <div class="blurb" style="width:100%;float:left;background:#eee;padding:10px;border-radius:10px;margin:5px;">
        <table class="table">
          <% @user.shared_projects.each do |project| %>
              <tr>
                  <td>
                      <%= link_to ""+ project.title, project %>
                  </td>
                  <td>
                    <div class="progress progress-striped">
                      <div class="bar" style="width: 20%;">
                        ??
                      </div>
                    </div>                  
                  </td>
              </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>

</lj-raw>